syntax enable
set tabstop=4
set softtabstop=4
set number
set cursorline
set wildmenu
set lazyredraw
set showmatch
set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>	"hit space to stop highlighting shit
inoremap jk <esc>							"binds esc to jk instead
set foldenable
set foldlevelstart=10
set foldnestmax=10

